<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/gold</item>
        <item name="colorControlNormal">@color/gold</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>
    <declare-styleable name="CardContainer">
        <attr name="android:gravity"/>
        <attr name="orientation" format="enum">
            <enum name="ordered" value="0"/>
            <enum name="disordered" value="1"/>
        </attr>
    </declare-styleable>

    <style name="AppTheme" parent="BaseAppTheme">
    </style>

    <style name="AppThemeNavigationDrawer" parent="AppTheme">
    </style>

    <style name="AppThemeIntro" parent="AppTheme">
        <item name="android:textViewStyle">@style/AppTheme.Widget.TextView</item>
    </style>
    <style name="AppTheme.Widget.TextView" parent="android:Widget.Holo.Light.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>
</resources>
